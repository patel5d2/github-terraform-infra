# Development Environment Configuration

github_owner = "your-github-username"
environment  = "dev"

# Repository visibility for development
repository_defaults = {
  visibility               = "private"
  has_issues              = true
  has_projects            = true
  has_wiki                = false
  has_downloads           = true
  allow_merge_commit      = true
  allow_squash_merge      = true
  allow_rebase_merge      = true
  delete_branch_on_merge  = true
  auto_init               = true
  allow_auto_merge        = true
}

# Less strict branch protection for dev
enable_branch_protection = true
required_reviews         = 0  # No reviews required in dev

# Enable auto-updates
enable_dependabot = true

# Development-specific variables
n8n_variables = {
  ENVIRONMENT = "development"
  LOG_LEVEL   = "debug"
}

glance_variables = {
  ENVIRONMENT = "development"
  DEBUG_MODE  = "true"
}

boilerplate_variables = {
  ENVIRONMENT = "development"
}

# Common topics for dev environment
common_topics = [
  "terraform",
  "infrastructure-as-code",
  "development"
]
